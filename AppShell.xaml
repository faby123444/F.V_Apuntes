<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="F.V_Apuntes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views ="clr-namespace:F.V_Apuntes.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:FV_AllNotesPage}"
            Icon="{OnPlatform 'icon_notes.png'}" />

        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:FV_AboutPage}"
            Icon="{OnPlatform 'icon_about.png'}" />
    </TabBar>
</Shell>